@section Styles {
    <link href="@Url.Content("~/Content/store.css")" rel="stylesheet" type="text/css" />
}

@section scripts{
    <script src="@Url.Content("~/Scripts/buy.js")"></script>

}

@{
    ViewBag.Title = "Steven's Game Store";
}

@model GameStore.Models.GameViewModel
<h2>New Releases</h2>
<div class="well">
    <div class="row">
        @foreach (var game in Model.NewReleases)
        {
            <div class="col-md-6 panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@Url.Content("~/Content/Images/")@game.CoverImage" class="cover img-responsive">
                        </div>
                        <div class="col-md-6 ">
                            <span class="title">@game.Name</span> <span class="publisher">@game.Publisher</span>
                            <p>@game.Genre</p>
                            <p>@game.Description</p>
                            <span id="inStock@(game.Id)">In Stock: </span><span id="quantity@(game.Id)">5</span>
                            <br />
                            <button type="button" id="buy@(game.Id)" class="btn btn-success btn-block buy">Buy Now</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<h2>Coming Soon</h2>
<div class="well">
    <div class="row">
        @foreach (var game in Model.ComingSoon)
        {
            <div class="col-md-6 panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@Url.Content("~/Content/Images/")@game.CoverImage" class="cover img-responsive">
                        </div>
                        <div class="col-md-6">
                            <span class="title">@game.Name</span> <span class="publisher">@game.Publisher</span>
                            <p>@game.Genre</p>
                            <p>@game.Description</p>
                            <br />
                            <p>Release Date: @game.ReleaseDate.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>